<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.buy.fish.dao.TbCommentMapper">

    <resultMap type="com.buy.fish.entity.TbComment" id="TbCommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="goodId" column="good_id" jdbcType="INTEGER"/>
        <result property="fromUserId" column="from_user_id" jdbcType="INTEGER"/>
        <result property="toUserId" column="to_user_id" jdbcType="INTEGER"/>
        <result property="comment" column="comment" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbCommentMap">
        select
          id, good_id, from_user_id, to_user_id, comment, time, parent_id
        from freefish.tb_comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbCommentMap">
        select
          id, good_id, from_user_id, to_user_id, comment, time, parent_id
        from freefish.tb_comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbCommentMap">
        select
          id, good_id, from_user_id, to_user_id, comment, time, parent_id
        from freefish.tb_comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="goodId != null">
                and good_id = #{goodId}
            </if>
            <if test="fromUserId != null">
                and from_user_id = #{fromUserId}
            </if>
            <if test="toUserId != null">
                and to_user_id = #{toUserId}
            </if>
            <if test="comment != null and comment != ''">
                and comment = #{comment}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into freefish.tb_comment(to_user_id, comment, time, parent_id)
        values (#{toUserId}, #{comment}, #{time}, #{parentId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update freefish.tb_comment
        <set>
            <if test="toUserId != null">
                to_user_id = #{toUserId},
            </if>
            <if test="comment != null and comment != ''">
                comment = #{comment},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from freefish.tb_comment where id = #{id}
    </delete>

</mapper>